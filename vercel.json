{
  "version": 2,
  "buildCommand": "pnpm run build:all",
  "outputDirectory": "client/dist",
  "installCommand": "npm install -g pnpm@10.13.1 && pnpm install --frozen-lockfile",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/v1/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/client/dist/index.html"
    }
  ]
}
