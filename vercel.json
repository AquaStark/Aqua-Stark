{
  "version": 2,
  "buildCommand": "npm ci --prefix client && npm run build --prefix client",
  "outputDirectory": "client/dist",
  "installCommand": "echo 'Skipping root install, building in client directory'",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/v1/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/client/dist/index.html"
    }
  ]
}
