# Frontend Environment Variables
# Copy this file to .env.local for local development

# Blockchain Configuration
VITE_KATANA_RPC_URL=http://localhost:5050
VITE_TORII_URL=http://localhost:8080
VITE_WORLD_ADDRESS=

# Backend API Configuration
# Use relative path for unified deployment
# Development: Vite proxy forwards /api to http://localhost:3001
# Production: Backend served from same origin under /api route
VITE_API_URL=/api

# Feature Flags
VITE_BACKEND_INTEGRATION=true
VITE_PLAYER_VALIDATION=true
VITE_REALTIME_UPDATES=true

# API Configuration
VITE_API_TIMEOUT=10000

# Development Settings
VITE_DEV_MODE=true
VITE_DEBUG=false
